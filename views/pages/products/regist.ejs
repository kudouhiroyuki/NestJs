      this.cancelFee1 = this.forms.cancelFee1;
      this.cancelFee2 = this.forms.cancelFee2;
      this.cancelFee3 = this.forms.cancelFee3;
      this.cancelFee4 = this.forms.cancelFee4;
      this.cancelFee5 = this.forms.cancelFee5;
      this.cancelPolicy = this.forms.cancelPolicy;
      if(this.forms.productAgetype) this.productAgetype = this.forms.productAgetype;
      switch (location.pathname.split('/')[2]) {
        case 'regist':
          this.displayType = 'regist';
          break;
        case 'registSet':
          this.displayType = 'registSet';
          break;
        case 'detail':
          this.displayType = 'detail';
          break;
        case 'detailSet':
          this.displayType = 'detailSet';
          break;          
        default:
      }
    },
    /**
     * アコーディオン
     */
    onTabToggle(target) {
      this[target] = !this[target];
    },
    /**
     * タグ（フォーマット変換）
     */
    conversionTag() {
      this.productTags.forEach(item => {
        item.text = item.tagString;
      });
      if(this.forms.productTag) {
        this.forms.productTag.forEach(item => {
          item.text = item.tagString;
        });
      }
      this.cartRecommendTags.forEach(item => {
        item.text = item.tagString;
      });
      if(this.forms.cartRecommendTag) {
        this.forms.cartRecommendTag.forEach(item => {
          item.text = item.tagString;
        });
      }
      this.orderRecommendTags.forEach(item => {
        item.text = item.tagString;
      });
      if(this.forms.orderRecommendTag) {
        this.forms.orderRecommendTag.forEach(item => {
          item.text = item.tagString;
        });
      }
    },
    /**
     * 商品タグ（登録データ作成）
     */
    onProductTagChange(item) {
      let resultTags = [];
      item.forEach((value) => {
        this.productTags.forEach((i) => {
          if(i.text.toLowerCase().indexOf(value.text.toLowerCase()) !== -1) {
            resultTags.push(i)
          } 
        })
      });
      this.productTag = resultTags;
    },
    /**
     * おすすめカートタグ（登録データ作成）
     */
    onCartRecommendTagChange(item) {
      let resultTags = [];
      item.forEach((value) => {
        this.cartRecommendTags.forEach((i) => {
          if(i.text.toLowerCase().indexOf(value.text.toLowerCase()) !== -1) {
            resultTags.push(i)
          } 
        })
      });
      this.cartRecommendTag = resultTags;
    },
    /**
     * おすすめ注文タグ（登録データ作成）
     */
    onOrderRecommendTagChange(item) {
      let resultTags = [];
      item.forEach((value) => {
        this.orderRecommendTags.forEach((i) => {
          if(i.text.toLowerCase().indexOf(value.text.toLowerCase()) !== -1) {
            resultTags.push(i)
          } 
        })
      });
      this.orderRecommendTag = resultTags;
    },
    /**
     * 商品画像モーダル（Open）
     */ 
    onImageModalOpen() {
      this.imageModal.show = true;
    },
    /**
     * 商品画像モーダル（Close）
     */ 
    onImageModalClose() {
      this.imageModal.show = false;
    },
    /**
     * 商品画像モーダル（画像ドラッグ）
     */
    onFileDrag(flag) {
      this.imageModal.isFileAreaFocus = flag;
    },
    /**
     * 商品画像モーダル（画像ドロップ 更新）
     */
    onFileDrop(event) {
      this.imageModal.isFileAreaFocus = false;
      const files = event.dataTransfer.files;
      if (files.length !== 1 || files[0].type.indexOf("image") !== 0) {
        return;
      }
      this.createFileData(files);
    },
    /**
     * 商品画像モーダル（ファイル選択 更新）
     */
    onFileChange(event) {
      const files = event.target.files;
      if (files.length !== 1 || files[0].type.indexOf("image") !== 0) {
        return;
      }
      this.createFileData(files);
    },
    /**
     * 商品画像モーダル（データ作成）
     */
    createFileData(files) {
      const reader = new FileReader();
      reader.readAsDataURL(files[0]);
      reader.onloadend = () => {
        this.productImage.push({ path: reader.result })
        this.onImageModalClose();
      };
    },
    /**
     * 商品画像モーダル（画像削除）
     */
    onDeleteFileData(target) {
      this.productImage.splice(target, 1);
    },
    /**
     * 商品画像モーダル（画像削除）
     */
    onDeleteFileData(target) {
      this.productImage.splice(target, 1);
    },
    // 年齢区分（データ追加）
    onAddProductAgetype() {
      this.productAgetype.push({
        ageElementDisplayName: this.ageNameInput,
        integrationParameter: ''
      })
      this.ageNameInput =  '';
      this.productAgetypeCheck = true;
    },
    // 年齢区分（データ削除）
    onDeleteProductAgetype(item) {
      let result = this.productAgetype.filter(o => o.ageElementDisplayName !== item.ageElementDisplayName);
      this.productAgetype = result;
    },
    /**
     * 利用種別 オープン回数（入力チェック）
     */
    validationUsageOpenQuantity() {
      this.usageOpenQuantityCheck = false;
      if(this.usageType === 'オープン') {
        if(this.usageOpenQuantity) this.usageOpenQuantityCheck = true;
      } else {
        this.usageOpenQuantityCheck = true;
      }
    },
    /**
     * 利用種別 日付変更手数料 radio（入力チェック）
     */
    validationUseDateChangeFeeType() {
      this.useDateChangeFeeTypeCheck = false;
      if(this.usageType === '日付指定') {
        if(this.useDateChangeFeeType) this.useDateChangeFeeTypeCheck = true;
      } else {
        this.useDateChangeFeeTypeCheck = true;
      }
    },
    /**
     * 利用種別 日付変更手数料 input（入力チェック）
     */
     validationUseDateChangeFee() {
      this.useDateChangeFeeCheck = false;
      if(this.usageType === '日付指定' && this.useDateChangeFeeType === '固定') {
        if(this.useDateChangeFee) this.useDateChangeFeeCheck = true;
      } else {
        this.useDateChangeFeeCheck = true;
      }
    },
    /**
     * 利用期間 From（入力チェック）
     */
    validationUseFromDatetime() {
      this.useFromDatetimeCheck = false;
      if(this.usePeriodElement === '日付指定') {
        if(this.useFromDatetime) this.useFromDatetimeCheck = true;
      } else {
        this.useFromDatetimeCheck = true;
      }
    },
    /**
     * 利用期間 To（入力チェック）
     */
    validationUseToDatetime() {
      this.useToDatetimeCheck = false;
      if(this.usePeriodElement === '日付指定') {
        if(this.useToDatetime) this.useToDatetimeCheck = true;
      } else {
        this.useToDatetimeCheck = true;
      }
    },
    /**
     * 利用期限（入力チェック）
     */
    validationUseLimitHours() {
      this.useLimitHoursCheck = false;
      if(this.usePeriodElement === '期限指定') {
        if(this.useLimitHours) this.useLimitHoursCheck = true;
      } else {
        this.useLimitHoursCheck = true;
      }
    },
    /**
     * フリーパス区分（入力チェック）
     */
    validationUsePathElement() {
      this.usePathElementCheck = false;
      if(this.useWayElement !== '顔認証') {
        this.usePathElementCheck = true;
        this.usePathElement = '';
        document.productsForm.usePathElement.value = '';
      } else {
        if(this.usePathElement) this.usePathElementCheck = true;
      }
    },
    /**
     * 決済方法 支払手数料（入力チェック）
     */
    validationStorePaymentCommission() {
      this.storePaymentCommissionCheck = false;
      if(this.isUsedStore === true) {
        if(this.storePaymentCommission) this.storePaymentCommissionCheck = true;
      } else {
        this.storePaymentCommissionCheck = true;
      }
    },
    /**
     * 決済方法 支払期限（入力チェック）
     */
    validationStorePaymentLimitHours() {
      this.storePaymentLimitHoursCheck = false;
      if(this.isUsedStore === true) {
        if(this.storePaymentLimitHours) this.storePaymentLimitHoursCheck = true;
      } else {
        this.storePaymentLimitHoursCheck = true;
      }
    },
    /**
     * キャンセル 固定額（入力チェック）
     */
    validationCancelFeeFix() {
      this.cancelFeeFixCheck = false;
      if(this.cancelFeeType === '固定') {
        if(this.cancelFeeFix) this.cancelFeeFixCheck = true;
      } else {
        this.cancelFeeFixCheck = true;
      }
    },
    /**
     * キャンセル キャンセル料率（入力チェック）
     */
     validationCancelCancelFeeAll() {
      this.cancelFeeAllCheck = false;
      if(this.cancelFeeType === '旅行キャンセル') {
        if(this.cancelFee1 && this.cancelFee2 && this.cancelFee3 && this.cancelFee4 && this.cancelFee5) {
          this.cancelFeeAllCheck = true;
        }
      } else {
        this.cancelFeeAllCheck = true;
      }
    },
    /**
     * 年齢区分（入力チェック）
     */
     validationProductAgetype() {
      this.productAgetypeCheck = false;
      if(this.productAgetype.length) this.productAgetypeCheck = true;
    },
    /**
     * 登録処理
     */
    onRegist() {      
      this.$v.$touch();
      this.validationUsageOpenQuantity();
      this.validationUseDateChangeFeeType();
      this.validationUseDateChangeFee();
      this.validationUseFromDatetime();
      this.validationUseToDatetime();
      this.validationUseLimitHours();
      this.validationUsePathElement();
      this.validationStorePaymentCommission();
      this.validationStorePaymentLimitHours();
      this.validationCancelFeeFix();
      this.validationCancelCancelFeeAll();
      this.validationProductAgetype();
      if(!this.$v.$invalid
        && this.usageOpenQuantityCheck
        && this.useDateChangeFeeTypeCheck
        && this.useDateChangeFeeCheck
        && this.useFromDatetimeCheck
        && this.useToDatetimeCheck
        && this.useLimitHoursCheck
        && this.usePathElementCheck
        && this.storePaymentCommissionCheck
        && this.storePaymentLimitHoursCheck
        && this.cancelFeeFixCheck
        && this.cancelFeeAllCheck
        && this.productAgetypeCheck
      ) {
        document.productsForm.method="post";
        document.productsForm.action = "/products/regist";
        document.productsForm.submit();
      }
    },











    
 
    // 画面遷移（料金プラン一覧）
    onPlanPage() {
      window.location.href = `/plans/reference?productId=${this.productId}`;
    },
    // 画面遷移（料金区分一覧）
    onDivisionPage() {
      window.location.href = `/divisions/reference?productId=${this.productId}`;
    },
    // 画面遷移（在庫一覧）
    onInventoryPage() {
      window.location.href = `/inventorys/reference?productId=${this.productId}`;
    },
