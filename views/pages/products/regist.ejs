      this.useLimitHours = this.forms.useLimitHours;
      this.useWayElement = this.forms.useWayElement;
      this.usePathElement = this.forms.usePathElement;
      this.howToUse = this.forms.howToUse;
      this.isUsedPaypay = this.forms.isUsedPaypay;
      this.isUsedStore = this.forms.isUsedStore;
      this.storePaymentCommission = this.forms.storePaymentCommission;
      this.storePaymentLimitHours = this.forms.storePaymentLimitHours;
      this.canOrderCancel = this.forms.canOrderCancel;
