<%- include('../../partials/head'); %>

<body>
<div class="layout">
  <%- include('../../partials/header'); %>

  <%- include('../../partials/sidebar'); %>

  <main id="productsRegistSet">    
    <h4 class="mb-4 fw-bold">商品登録</h4>

    <form @submit.prevent="onSubmit" name="productsForm">
      <!-- 基本情報 -->
      <div :style="basicTabStatus ? 'height: inherit' : 'height: 55px'" class="baseShadow p-3 mb-5 overflow-hidden">
        <div class="d-flex">
          <div class="me-auto">
            <h5 class="mb-4 fw-bold">基本情報</h5>
          </div>
          <div style="cursor: pointer">
            <img
              @click="onTabToggle('basicTabStatus')"
              :style="basicTabStatus ? 'transform: inherit' : 'transform: scale(1, -1)'"
              src="/images/icon/arow.svg"
            >
          </div>
        </div>
        <!-- 商品名 -->
        <div class="col-4 mb-4">
          <label class="form-label">商品名</label>
          <input
            v-model="product_name"
            name="product_name"
            type="text"
            class="form-control"
            placeholder="商品名"
          >
        </div>
        <!-- 商品説明 -->
        <div class="col-6 mb-4">
          <label class="form-label">商品説明</label>
          <textarea
            v-model="product_explanation"
            name="product_explanation"
            rows="3"
            class="form-control mb-2"
          ></textarea>
        </div>
        <!-- 販売種別 -->
        <div class="mb-4">
          <label class="form-label">販売種別</label>
          <div class="form-check mb-2 w-50">
            <input
              v-model="sales_kind_type"
              name="sales_kind_type"
              class="form-check-input"
              type="radio"
              id="sales_1"
              value="1"
            >
            <label class="form-check-label" for="sales_1">設定を引継ぐ</label>
          </div>
          <div class="form-check mb-2 w-50">
            <input
              v-model="sales_kind_type"
              name="sales_kind_type"
              class="form-check-input"
              type="radio"
              id="sales_2"
              value="2"
            >
            <label class="form-check-label" for="sales_2">指定なし</label>
          </div>
          <div class="form-check mb-2 w-50">
            <input
              v-model="sales_kind_type"
              name="sales_kind_type"
              class="form-check-input"
              type="radio"
              id="sales_3"
              value="3"
            >
            <label class="form-check-label" for="sales_3">利用日指定</label>
          </div>
          <div class="form-check mb-2 w-50">
            <input
              v-model="sales_kind_type"
              name="sales_kind_type"
              class="form-check-input"
              type="radio"
              id="sales_4"
              value="4"
            >
            <label class="form-check-label" for="sales_4">利用日・時間帯指定</label>
          </div>
          <div v-if="sales_kind_type === '3' || sales_kind_type === '4'" class="d-flex mb-3">
            <div class="col-1"></div>
            <div class="col-11">
              <label class="form-label w-100">取扱時間</label>
              <div class="d-inline-block">
                <vue-ctk-date-time-picker
                  name="sales_kind_from"
                  v-model="sales_kind_from"
                  formatted="YYYY/MM/DD"
                  only-date
                  :min-date="minDate"
                  :label="'From'"
                  position="top"
                /></vue-ctk-date-time-picker>
              </div>
              <div class="d-inline-block">〜</div>
              <div class="d-inline-block">
                <vue-ctk-date-time-picker
                  name="sales_kind_to"
                  v-model="sales_kind_to"
                  formatted="YYYY/MM/DD"
                  only-date
                  :min-date="minDate"
                  :label="'To'"
                  position="top"
                /></vue-ctk-date-time-picker>
              </div>
            </div>
          </div>
          <div v-if="sales_kind_type === '4'" class="d-flex">
            <div class="col-1"></div>
            <div class="col-11">
              <label class="form-label w-100">時間間隔</label>
              <select v-model="sales_kind_interval" name="sales_kind_interval" class="form-select w-25">
                <option selected></option>
                <option value="15">15分</option>
                <option value="30">30分</option>
                <option value="60">60分</option>
              </select>
            </div>
          </div>
        </div>
        <!-- 在庫管理 -->
        <div class="col-12 mb-4">
          <label class="form-label w-100">在庫管理</label>
          <div class="form-check form-check-inline">
            <input
              v-model="stock_management_type"
              name="stock_management_type"
              class="form-check-input"
              type="radio"
              id="stock_1"
              value="1"
            >
            <label class="form-check-label" for="stock_1">設定を引継ぐ</label>
          </div>
          <div class="form-check form-check-inline">
            <input
              v-model="stock_management_type"
              name="stock_management_type"
              class="form-check-input"
              type="radio"
              id="stock_2"
              value="2"
            >
            <label class="form-check-label" for="stock_2">在庫管理なし</label>
          </div>
          <div class="form-check form-check-inline">
            <input
              v-model="stock_management_type"
              name="stock_management_type"
              class="form-check-input"
              type="radio"
              id="stock_3"
              value="3"
            >
            <label class="form-check-label" for="stock_3">DMP在庫管理</label>
          </div>
          <div class="form-check form-check-inline">
            <input
              v-model="stock_management_type"
              name="stock_management_type"
              class="form-check-input"
              type="radio"
              id="stock_4"
              value="4"
            >
            <label class="form-check-label" for="stock_4">HL在庫管理</label>
          </div>
          <div v-if="stock_management_type === '3'" class="col-4 mt-2">
            <input v-model="JSON.stringify(stock_management_item)" type="hidden" name="stock_management_item">
            <select v-model="stock_management_item" class="form-select">
              <option hidden value="">在庫ID</option>
              <option
                v-for="item in stockDmps"
                :key="item.id"
                :value="item"
              >{{ item.name }}</option>
            </select>
          </div>
        </div>
        <!-- 表示期間 -->
        <div class="col-12 mb-4">
          <label class="form-label w-100">表示期間</label>
          <div class="d-inline-block">
            <vue-ctk-date-time-picker
              name="display_period_from"
              v-model="display_period_from"
              formatted="YYYY/MM/DD"
              only-date
              :min-date="minDate"
              :label="'From'"
              position="top"
            /></vue-ctk-date-time-picker>
          </div>
          <div class="d-inline-block">〜</div>
          <div class="d-inline-block">
            <vue-ctk-date-time-picker
              name="display_period_to"
              v-model="display_period_to"
              formatted="YYYY/MM/DD"
              only-date
              :min-date="minDate"
              :label="'To'"
              position="top"
            /></vue-ctk-date-time-picker>
          </div>
          <div class="d-inline-block">
            <input v-model="JSON.stringify(display_period_stop)" type="hidden" name="display_period_stop">
            <input
              @click="display_period_stop=$event.target.checked"
              class="form-check-input"
              type="checkbox"
              id="displayPeriodStop"
            >
            <label class="form-check-label" for="displayPeriodStop">
              表示停止
            </label>
          </div>
        </div>
        <!-- 販売期間 -->
        <div class="col-12 mb-4">
          <label class="form-label w-100">販売期間</label>
          <div class="d-inline-block">
            <vue-ctk-date-time-picker
              name="display_sales_from"
              v-model="display_sales_from"
              formatted="YYYY/MM/DD"
              only-date
              :min-date="minDate"
              :label="'From'"
              position="top"
            /></vue-ctk-date-time-picker>
          </div>
          <div class="d-inline-block">〜</div>
          <div class="d-inline-block">
            <vue-ctk-date-time-picker
              name="display_sales_to"
              v-model="display_sales_to"
              formatted="YYYY/MM/DD"
              only-date
              :min-date="minDate"
              :label="'To'"
              position="top"
            /></vue-ctk-date-time-picker>
          </div>
          <div class="d-inline-block">
            <input v-model="JSON.stringify(display_sales_stop)" type="hidden" name="display_sales_stop">
            <input
              @click="display_sales_stop=$event.target.checked"
              class="form-check-input"
              type="checkbox"
              id="displaySalesStop"
            >
            <label class="form-check-label" for="displaySalesStop">
              表示停止
            </label>
          </div>
        </div>
      </div>

      <!-- 年齢区分 -->
      <div :style="agesTabStatus ? 'height: inherit' : 'height: 55px'" class="baseShadow p-3 mb-5 overflow-hidden">
        <input v-model="JSON.stringify(ageCategory)" type="hidden" name="ageCategory">
        <div class="d-flex">
          <div class="me-auto">
            <h5 class="mb-4 fw-bold">年齢区分</h5>
          </div>
          <div style="cursor: pointer">
            <img
              @click="onTabToggle('agesTabStatus')"
              :style="agesTabStatus ? 'transform: inherit' : 'transform: scale(1, -1)'"
              src="/images/icon/arow.svg"
            >
          </div>
        </div>
        <div class="col-8">
          <table class="table align-middle">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">年齢区分</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="(item, index) in ages" :key="index">
                <th>{{ index + 1 }}</th>
                <td>{{ item.name }}</td>
                <td><input @change="onAgeCategoryChange($event, item)" class="form-check-input" type="checkbox"></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- 組み込み商品 -->
      <div :style="setProductTabStatus ? 'height: inherit' : 'height: 55px'" class="baseShadow p-3 mb-5 overflow-hidden">
        <input v-model="JSON.stringify(setProducts)" type="hidden" name="setProducts">
        <div class="d-flex">
          <div class="me-auto">
            <h5 class="mb-4 fw-bold">組み込み商品</h5>
          </div>
          <div style="cursor: pointer">
            <img
              @click="onTabToggle('setProductTabStatus')"
              :style="setProductTabStatus ? 'transform: inherit' : 'transform: scale(1, -1)'"
              src="/images/icon/arow.svg"
            >
          </div>
        </div>
        <div class="d-flex flex-row-reverse mb-4">
          <button class="dropdown border-0 bg-white" type="button" data-bs-toggle="dropdown">
            <img src="/images/icon/plus.svg">
          </button>
          <ul class="dropdown-menu">
            <button type="button" @click="onProductsModalShow('privateCompany')" class="dropdown-item small">自社商品を追加する</button>
            <button type="button" @click="onProductsModalShow('otherCompany')" class="dropdown-item small">他社商品を追加する</button>
          </ul>
        </div>
        <div v-if="productModal.ageCategoryError" class="d-flex flex-row-reverse">
          <p class="text-danger fw-bold">年齢区分を選択してください</p>
        </div>
        <div class="col-12">
          <table class="table align-middle">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">商品ID</th>
                <th scope="col">商品名</th>
                <th scope="col">テナント</th>
                <th scope="col">プラン</th>
                <th scope="col">在庫</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="(item, index) in setProducts" :key="index">
                <th>{{ index + 1 }}</th>
                <td>{{ item.productId }}</td>
                <td>{{ item.product_name }}</td>
                <td>{{ item.tenant_name }}</td>
                <td>{{ item.plan_name }}</td>
                <td>{{ item.stock_name }}</td>
                <td>
                  <button
                    @click="onProductsDelete(item)"
                    type="button"
                    class="btn-close"
                    style="font-size: 14px"
                  ></button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      
      <!-- 利用方法 -->
      <div :style="usageTabStatus ? 'height: inherit' : 'height: 55px'" class="baseShadow p-3 mb-5">
        <div class="d-flex">
          <div class="me-auto">
            <h5 class="mb-4 fw-bold">利用方法</h5>
          </div>
          <div style="cursor: pointer">
            <img
              @click="onTabToggle('usageTabStatus')"
              :style="usageTabStatus ? 'transform: inherit' : 'transform: scale(1, -1)'"
              src="/images/icon/arow.svg"
            >
          </div>
        </div>
        <div :style="usageTabStatus ? 'display: block' : 'display: none'">
          <!-- 利用方法 -->
          <div class="col-12 mb-4">
            <label class="form-label w-100">利用方法</label>
            <div class="form-check mb-2 w-25">
              <input
                v-model="usageMethodType"
                name="usageMethodType"
                class="form-check-input"
                type="radio"
                id="riyou_1"
                value="1"
              >
              <label class="form-check-label" for="riyou_1">画面提示</label>
            </div>
            <div class="form-check mb-2 w-25">
              <input
                v-model="usageMethodType"
                name="usageMethodType"
                class="form-check-input"
                type="radio"
                id="riyou_2"
                value="2"
              >
              <label class="form-check-label" for="riyou_2">電子もぎり</label>
            </div>
            <div class="form-check mb-2 w-25">
              <input
                v-model="usageMethodType"
                name="usageMethodType"
                class="form-check-input"
                type="radio"
                id="riyou_3"
                value="3"
              >
              <label class="form-check-label" for="riyou_3">顔認証</label>
            </div>
            <div class="form-check mb-2 w-25">
              <input
                v-model="usageMethodType"
                name="usageMethodType"
                class="form-check-input"
                type="radio"
                id="riyou_4"
                value="4"
              >
              <label class="form-check-label" for="riyou_3">QR提示</label>
            </div>
            <div>
              <div class="form-check d-inline-block w-25">
                <input
                  v-model="usageMethodType"
                  name="usageMethodType"
                  class="form-check-input"
                  type="radio"
                  id="riyou_5"
                  value="5"
                >
                <label class="form-check-label" for="riyou_3">QR読込</label>
              </div>
              <template v-if="usageMethodType==='5'">
                <input v-model="JSON.stringify(usageMethodItem)" type="hidden" name="usageMethodItem">
                <div class="d-inline-block">
                  <input
                    v-model="qrParam"
                    type="text"
                    class="form-control"
                    placeholder="パラメータ"
                    style="width: 214px; margin-right: 5px;"
                  >
                </div>
                <button @click="onQrParamAdd" class="border-0 bg-white" type="button">
                  <img src="/images/icon/plus.svg">
                </button>
                <div class="d-flex mt-2">
                  <div class="w-25"></div>
                  <table class="table align-middle w-50">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">パラメータ</th>
                        <th scope="col"></th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr v-for="(item, index) in usageMethodItem" :key="index">
                        <th>{{ index + 1 }}</th>
                        <td>{{ item  }}</td>
                        <td>
                          <input
                            @click="onQrDownload"
                            type="button"
                            value="QRコード"
                            class="btn baseBtnGrey"
                          />
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </template>
            </div>
          </div>
          <!-- 利用期間 -->
          <div class="form-group mb-4">
            <label class="form-label w-100">利用期間</label>
            <div class="col-12 mb-3">
              <div class="form-check form-check-inline">
                <input
                  v-model="usage_period_type"
                  name="usage_period_type"
                  value="1"
                  class="form-check-input"
                  type="radio"
                  id="usagePeriod_1"
                >
                <label class="form-check-label" for="usagePeriod_1">日付指定</label>
              </div>
              <template v-if="usage_period_type === '1'">
                <div class="d-inline-block">
                  <vue-ctk-date-time-picker
                    name="usage_period_from"
                    v-model="usage_period_from"
                    formatted="YYYY/MM/DD"
                    only-date
                    :min-date="minDate"
                    :label="'From'"
                    position="top"
                  /></vue-ctk-date-time-picker>
                </div>
                <div class="d-inline-block">〜</div>
                <div class="d-inline-block">
                  <vue-ctk-date-time-picker
                    name="usage_period_to"
                    v-model="usage_period_to"
                    formatted="YYYY/MM/DD"
                    only-date
                    :min-date="minDate"
                    :label="'To'"
                    position="top"
                    :disabled="usage_period_type === '2'"
                  /></vue-ctk-date-time-picker>
                </div>
              </template>
            </div> 
            <div class="col-12">
              <div class="form-check form-check-inline">
                <input
                  v-model="usage_period_type"
                  name="usage_period_type"
                  value="2"
                  class="form-check-input"
                  type="radio"
                  id="usagePeriod_2"
                >
                <label class="form-check-label" for="usagePeriod_2">期限指定</label>
              </div>
              <template v-if="usage_period_type === '2'">
                <div class="d-inline-block">
                  <input
                    v-model="usage_period_deadline"
                    name="usage_period_deadline"
                    type="text"
                    class="form-control mb-2"
                    placeholder="有効期限"
                  />
                </div>
              </template>
            </div>
          </div>
          <!-- 利用施設 -->
          <div class="col-12 mb-4">
            <label class="form-label w-100">利用施設</label>
            <input v-model="JSON.stringify(tenants_used)" type="hidden" name="tenants_used">
            <div class="col-8">
              <table class="table align-middle">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">施設ID</th>
                    <th scope="col">施設名</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  <tr v-for="(item, index) in tenants" :key="index">
                    <th>{{ index + 1 }}</th>
                    <td>{{ item.id }}</td>
                    <td>{{ item.name }}</td>
                    <td>
                      <input
                        @change="onTenantChange($event, item)"
                        class="form-check-input"
                        type="checkbox">
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- 商品タグ -->
      <div :style="tagTabStatus ? 'height: inherit' : 'height: 55px'" class="baseShadow p-3 mb-5 overflow-hidden">
        <input v-model="JSON.stringify(product_tag)" type="hidden" name="product_tag">
        <div class="d-flex">
          <div class="me-auto">
            <h5 class="mb-4 fw-bold">商品タグ</h5>
          </div>
          <div style="cursor: pointer">
            <img
              @click="onTabToggle('tagTabStatus')"
              :style="tagTabStatus ? 'transform: inherit' : 'transform: scale(1, -1)'"
              src="/images/icon/arow.svg"
            >
          </div>
        </div>
        <vue-tags-input
          v-model="tag"
          :tags="product_tag"
          :autocomplete-items="onTagsFilter"
          @tags-changed="replaceTags"
        />
      </div>

      <!-- 商品画像 -->
      <div :style="imageTabStatus ? 'height: inherit' : 'height: 55px'" class="baseShadow p-3 mb-5 overflow-hidden">
        <input v-model="JSON.stringify(images)" type="hidden" name="images">
        <div class="d-flex">
          <div class="me-auto">
            <h5 class="mb-4 fw-bold">商品画像</h5>
          </div>
          <div style="cursor: pointer">
            <img
              @click="onTabToggle('imageTabStatus')"
              :style="imageTabStatus ? 'transform: inherit' : 'transform: scale(1, -1)'"
              src="/images/icon/arow.svg"
            >
          </div>
        </div>
        <div
          v-for="(item, index) of imagesView"
          :key="index"
          class="form-check-inline mb-3 position-relative"
        >
          <img :src="item.path" style="width: 136px; object-fit: cover; height: 86px;">
          <button
            @click="onDeleteFileData"
            type="button"
            class="btn-close position-absolute"
            style="right: 5px; top: 5px; font-size: 14px"
            :value="index"
          ></button>
        </div>
        <div class="form-check-inline">
          <button @click="fileModalShow=true" class="border-0 bg-white" type="button">
            <img src="/images/icon/plus.svg">
          </button>
        </div>        
      </div>

      <!-- 保存ボタン -->
      <div class="d-flex flex-row-reverse">
        <input
          type="submit"
          value="保存"
          class="btn mt-4 baseBtnGrey"
          style="width: 156px;"
        />
      </div>
    </form>

    <!-- ファイルアップロード(モーダル) -->
    <div :style="fileModalShow ? 'display: block' : 'display: none'" class="modalMain">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">ファイルアップロード</h5>
            <button @click="fileModalShow=false" type="button" class="btn-close"></button>
          </div>
          <div
            @dragover.prevent="onFileDrag(true)"
            @dragleave="onFileDrag(false)"
            @drop.prevent="onFileDrop" 
            :class="{fileAreaFocus: isFileAreaFocus}"
            class="modal-body m-3"
          >
            <p>ここにファイルをドラッグ＆ドロップ<br>または</p>
            <input type="file" @change="onFileChange"/>
          </div>
        </div>
      </div>
    </div>
    <div
      :style="fileModalShow ? 'display: block' : 'display: none'"
      class="modalBg"
      @click="fileModalShow=false">
    </div>

    <!-- 組み込み商品(モーダル) -->
    <div :style="productModal.show ? 'display: block' : 'display: none'" class="modalMain">
      <div class="modal-dialog" style="width: 400px">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">組み込み商品選択</h5>
            <button @click="onProductsModalClear" type="button" class="btn-close"></button>
          </div>
          <!-- 自社商品 -->
          <div v-if="productModal.type === 'privateCompany'" class="modal-body m-3">
            <div v-if="productModal.current === '1'" class="col-12 mb-4">
              <p v-if="productModal.resultItemsError" class="text-danger fw-bold mt-2">商品が見つかりません。</p>
              <label class="form-label">商品ID</label>
              <input
                v-model="productModal.productId"
                @input="onProductsInput('productId')"
